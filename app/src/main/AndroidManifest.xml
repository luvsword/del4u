<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kaist.delforyou">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.kaist.delforyou.app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.SignupActivity">
        </activity>
        <activity
            android:name=".activity.MainMenuActivity">
        </activity>
        <activity
            android:name=".activity.DetailDeliveryActivity">
        </activity>
        <activity
            android:name=".activity.DeliveryMenViewActivity">
        </activity>
        <activity
            android:name=".activity.ReservationHistoryActivity">
        </activity>
        <activity
            android:name=".activity.SettingActivity">
        </activity>
        <activity
            android:name=".activity.MainMenuActivityforDeliveryMen">
        </activity>
        <activity
            android:name=".activity.ReservationActivity">
        </activity>
        <activity
            android:name=".activity.RequirementActivity">
        </activity>
        <activity
            android:name=".activity.ModefySignInfoActivity">
        </activity>
        <activity
            android:name=".activity.AssignActivity">
        </activity>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>